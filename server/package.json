{
  "name": "@missout/server",
  "version": "1.0.0",
  "type": "module",
  "description": "Missout Backend API - Solana Lottery Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx --env-file=.env src/index.ts",
    "build": "echo 'Build skipped - using tsx runtime' && ls -la src/",
    "start": "NODE_ENV=production tsx src/index.ts",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/scripts/migrate-database.ts",
    "db:test": "psql $DATABASE_URL -c 'SELECT NOW();'",
    "db:backup": "pg_dump $DIRECT_DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "health": "curl -s http://localhost:5000/health | jq",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@google-cloud/storage": "^7.18.0",
    "@sentry/node": "^10.32.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@switchboard-xyz/on-demand": "^3.7.3",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "tweetnacl": "^1.0.3",
    "tsx": "^4.20.5",
    "typescript": "5.6.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^2.0.0",
    "@types/node": "20.19.27",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13"
  },
  "devDependencies": {},
  "overrides": {
    "drizzle-kit": {
      "@esbuild-kit/esm-loader": "npm:tsx@^4.20.4"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
